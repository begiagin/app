<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="rtl"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textViewBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="انتخاب از لیست دستگاه های جفت شده" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

                <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                    android:layout_weight="1"
                        />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="رقم شمارده راست :" />

            <EditText
                android:layout_width="0dp"
                android:numeric="integer"
                android:maxLines="1"
                android:id="@+id/txtRightCounter"
                android:text="1"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="رقم شمارده چپ :" />

            <EditText
                android:layout_width="0dp"
                android:numeric="integer"
                android:maxLines="1"
                android:text="1"
                android:id="@+id/txtLeftCounter"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="درنگ پیش از حک :" />

            <EditText
                android:layout_width="0dp"
                android:numeric="decimal"
                android:maxLines="1"
                android:text="0.1"
                android:id="@+id/txtDelayBeforeMark"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="درنگ پس از حک :" />

            <EditText
                android:layout_width="0dp"
                android:numeric="decimal"
                android:id="@+id/txtDelayAfterMark"
                android:maxLines="1"
                android:text="0"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textDirection="rtl"
                android:text="X سطر بعد : " />

            <EditText
                android:layout_width="0dp"
                android:numeric="integer"
                android:maxLines="1"
                android:text="30"
                android:id="@+id/txtNextLineX"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"

            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textDirection="rtl"
                android:text="Y سطر بعد : " />

            <EditText
                android:layout_width="0dp"
                android:numeric="integer"
                android:id="@+id/txtNextLineY"
                android:maxLines="1"
                android:text="30"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"

            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textDirection="rtl"
                android:text="تندی حک : " />

            <EditText
                android:layout_width="0dp"
                android:numeric="integer"
                android:id="@+id/txtMarkVelocity"
                android:maxLines="1"
                android:text="50"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"

            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textDirection="rtl"
                android:text="درجه چرخش : " />

            <EditText
                android:layout_width="0dp"
                android:numeric="integer"
                android:id="@+id/txtRotationAngle"
                android:maxLines="1"
                android:text="0"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"

            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textDirection="rtl"
                android:text="ضریب محور X : " />

            <EditText
                android:layout_width="0dp"
                android:id="@+id/txtXAxisCoffieceint"
                android:numeric="integer"
                android:maxLines="1"
                android:text="25"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"

            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:textDirection="rtl"
                android:text="ضریب محور Y : " />

            <EditText
                android:layout_width="0dp"
                android:id="@+id/txtYAxisCoffieceint"
                android:numeric="integer"
                android:maxLines="1"
                android:text="25"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"

            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textDirection="rtl"
                android:text="نقطه آغاز حک X : " />

            <EditText
                android:layout_width="0dp"
                android:numeric="integer"
                android:id="@+id/txtStartXPoint"
                android:maxLines="1"
                android:text="100"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"

            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textDirection="rtl"
                android:text="نقطه آغاز حک Y : " />

            <EditText
                android:layout_width="0dp"
                android:id="@+id/txtStartYPoint"
                android:numeric="integer"
                android:maxLines="1"
                android:text="100"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"

            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textDirection="rtl"
                android:text="فاصله نقاط : " />

            <EditText
                android:layout_width="0dp"
                android:id="@+id/txtPointsDistance"
                android:numeric="integer"
                android:maxLines="1"
                android:text="8"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"

            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textDirection="rtl"
                android:text="توان ضربه : " />

            <EditText
                android:layout_width="0dp"
                android:id="@+id/txtHitPower"
                android:numeric="integer"
                android:maxLines="1"
                android:text="0"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"

            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textDirection="rtl"
                android:text="بسامد قلم : " />

            <EditText
                android:layout_width="0dp"
                android:id="@+id/txtPenFrequency"
                android:numeric="integer"
                android:maxLines="1"
                android:text="0"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"

            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text17"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textDirection="rtl"
                android:text="برو به صفر سخت افزاری" />

            <CheckBox
                android:layout_width="0dp"
                android:id="@+id/cbGotoZeroHardware"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"

            android:layout_marginBottom="8dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btnSave"
                android:text="ذخیره تغییرات" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btnCancel"
                android:text="انصراف" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>




